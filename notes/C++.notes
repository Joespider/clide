//Class Example
	#include <iostream>
	using namespace std;

	class Math {

	private:
		int x, y;

	public:
		//class constructor
		Math(int x, int y)
		{
			// this-> points to the class's x, y; not param x, y vars
			this->x = x;
			this->y = y;
		}
		//class desctructor
		~Math()
		{

		}

		int add()
		{
			int Total;
			Total = x + y;
			return Total;
		}
	};

	int main()
	{
		Math m(5,6);
		int Answer;
		Answer = m.add();
		cout << "Answer = " << m.add() << endl;

		return 0;
	}
