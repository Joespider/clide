[Split String]
	#include <iostream>
	#include <sstream>
	#include <string>

	int main()
	{
		std::string This = "This is a test";
		std::stringstream ss(This);
		std::string item;
		while (std::getline(ss,item,' '))
		{
			std::cout << item << std::endl;
		}
		return 0;
	}

